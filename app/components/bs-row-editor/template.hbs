{{#each model.cards as |card|}}
  {{bscard-editor model=card
                  onCardDrag=(action 'onCardDrag')
                  onShowCardResize=(action 'onShowCardResize')
                  onCardDelete=(action 'onCardDelete')}}
{{/each}}
<div class="row-crack"></div>
{{#if showResizer}}
  {{card-resizer model=resizerModel
                 onShift=(action 'onShift')
               }}
{{/if}}
