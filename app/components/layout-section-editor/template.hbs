<div class="{{containerClass}}" >
  <div class="section-controls">
    {{#draggable-object dragType="move" objectType="section" model=model }}
      <span class="glyphicon glyphicon-move card-editor-drag-handle"></span>
    {{/draggable-object}}
    <a href="#" {{action "editSection" model}}><span class="glyphicon glyphicon-cog"/></a>
    <a href="#" {{action "removeSection" model}}><span class="glyphicon glyphicon-remove"/></a>
  </div>
  {{#if hasRows}}
    {{#each model.rows as |row|}}
      {{bs-row-editor model=row
                      onRowDelete=(action 'onRowDelete')
                      onCardDelete=(action 'onCardDelete')
                    }}
    {{/each}}
  {{else}}
  <div class="row">
    <div class="col-md-12">
      <h2>Hey No Cards! Drop something here!</h2>
    </div>
  </div>
  {{/if}}
</div>
