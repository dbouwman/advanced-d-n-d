
{{#if hasSections}}
  {{#each model.sections as |section|}}
    {{layout-section-editor model=section
                  layoutEditor=this
                  onRemoveSection=(action 'onRemoveSection')
                }}
  {{/each}}
{{else}}
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <h2>Drag a card a component here</h2>
      </div>
    </div>
  </div>
{{/if}}


{{drop-target model=dropTargetModel}}
{{card-controls visible=controlsVisible}}
{{card-drop-targets
    dragMessage="Drag to new position"
    dockLeftMessage="Split and Dock to the left"
    dockRightMessage="Split and Dock to the right"}}
